{
  "version": "1.0.0-*",

  "configurations": {
    "Debug": {
      "buildOptions": {
        "define": [ "DEBUG", "TRACE" ]
      }
    },
    "Release": {
      "buildOptions": {
        "define": [ "RELEASE", "TRACE" ],
        "optimize": true
      }
    }
  },

  "frameworks": {

    "net45": {
      "frameworkAssemblies": {
        "System.Data": "",
        "System.Runtime.Caching": "",
        "System.ComponentModel.DataAnnotations": ""
      },
      "dependencies": {
        "StringInterpolationBridge": "0.9.1",
        "Dapper": "1.38.0"
      }
    },

    "net46": {
      "frameworkAssemblies": {
        "System.Data": "",
        "System.Runtime.Caching": "",
        "System.ComponentModel.DataAnnotations": ""
      },
      "dependencies": {
        "Dapper": "1.38.0"
      }
    },

    "netstandard1.5": {
      "buildOptions": {
        "define": [ "COREFX" ]
      },
      "imports": "dnxcore50",
      "dependencies": {
        "NETStandard.Library": "1.5.0-rc2-24027",
        "System.ComponentModel.Annotations": "4.1.0-rc2-24027",
        "System.ComponentModel.TypeConverter": "4.0.1-rc2-24027",
        "System.Data.Common": "4.0.1-rc2-24027",
        "System.Reflection.Extensions": "4.0.1-rc2-24027",
        "Dapper": "1.50.0-rc2"
      }
    }
  },

  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --output bin\\nupkgs"
    ] /* "\"%project:Directory%\\..\\..\\nuget.exe\" push \"%project:Directory%\\bin\\debug\\%project:Name%.%project:Version%.nupkg\" -source nugetserver -ApiKey key" */
  }
}
