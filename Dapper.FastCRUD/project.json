{
  "version": "1.0.0-*",
  "title": "Dapper.FastCrud",
  "authors": [ "MoonStorm" ],
  "packOptions": {
    "owners": [ "MoonStorm" ],
    "licenseUrl": "http://www.opensource.org/licenses/MIT",
    "iconUrl": "https://raw.githubusercontent.com/MoonStorm/Dapper.FastCRUD/master/logo.png",
    "requireLicenseAcceptance": false,
    "summary": "The fastest micro-orm extension for Dapper"
  },

  "configurations": {
    "Debug": {
      "buildOptions": {
        "define": [ "DEBUG", "TRACE" ]
      }
    },
    "Release": {
      "buildOptions": {
        "define": [ "RELEASE", "TRACE" ],
        "optimize": true
      }
    }
  },

  "frameworks": {

    "net45": {
      "frameworkAssemblies": {
        "System.Data": "",
        "System.Runtime.Caching": "",
        "System.ComponentModel.DataAnnotations": ""
      },
      "dependencies": {
        "StringInterpolationBridge": "0.9.1",
        "Dapper": "1.38.0"
      }
    },

    "net46": {
      "frameworkAssemblies": {
        "System.Data": "",
        "System.Runtime.Caching": "",
        "System.ComponentModel.DataAnnotations": ""
      },
      "dependencies": {
        "Dapper": "1.38.0"
      }
    }

    //"netstandard1.5": {
